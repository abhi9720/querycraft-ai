{
  "users": {
    "description": "Table containing user information.",
    "columns": [
      {"name": "id", "type": "INTEGER", "description": "Primary key for the user."},
      {"name": "name", "type": "TEXT", "description": "Name of the user."},
      {"name": "email", "type": "TEXT", "description": "Email of the user."}
    ]
  },
  "products": {
    "description": "Table containing product information.",
    "columns": [
      {"name": "id", "type": "INTEGER", "description": "Primary key for the product."},
      {"name": "name", "type": "TEXT", "description": "Name of the product."},
      {"name": "price", "type": "REAL", "description": "Price of the product."}
    ]
  },
  "orders": {
    "description": "Table containing order information.",
    "columns": [
      {"name": "id", "type": "INTEGER", "description": "Primary key for the order."},
      {"name": "user_id", "type": "INTEGER", "description": "Foreign key referencing the users table."},
      {"name": "product_id", "type": "INTEGER", "description": "Foreign key referencing the products table."},
      {"name": "quantity", "type": "INTEGER", "description": "Quantity of the product ordered."}
    ]
  }
}